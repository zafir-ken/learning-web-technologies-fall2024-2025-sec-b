<?php
    $length = 10; 
    $width = 5;   

    //area
    $area = $length * $width;

    //perimeter
    $perimeter = 2 * ($length + $width);

    echo "Length: $length<br/>";
    echo "Width: $width<br/>";
    echo "Area of the rectangle: $area<br/>";
    echo "Perimeter of the rectangle: $perimeter<br/>";
?>
